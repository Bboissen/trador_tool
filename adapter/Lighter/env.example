# Copy this file to `.env` and fill in real values.

LIGHTER_API_HOST=https://mainnet.zklighter.elliot.ai
# Optional override when the WebSocket endpoint differs from the REST host (omit protocol)
LIGHTER_WS_HOST=
LIGHTER_WS_PATH=/stream
LIGHTER_WS_LOG_PRETTY=false

# Comma separated identifiers. At least one of these must be set for the adapter to start.
LIGHTER_WS_ORDER_BOOK_IDS=
LIGHTER_WS_ACCOUNT_IDS=

LIGHTER_REST_INTERVAL_SECONDS=30
LIGHTER_WS_RECONNECT_SECONDS=5
LIGHTER_HEALTH_MAX_REST_AGE_SECONDS=120
LIGHTER_HEALTH_MAX_WS_AGE_SECONDS=90

# Optional logging level: DEBUG, INFO, WARNING, ERROR
LIGHTER_LOG_LEVEL=INFO

# REST authentication (optional)
LIGHTER_ACCOUNT_INDEX=
LIGHTER_API_KEY_INDEX=2
LIGHTER_API_KEY_PRIVATE_KEY=
LIGHTER_API_KEY=
LIGHTER_REST_MARKET_IDS=29,24
LIGHTER_AUTH_TOKEN_TTL_SECONDS=600

# Optional roundtrip smoke test (disabled by default)
LIGHTER_EXECUTE_ROUNDTRIP_TRADE=true
LIGHTER_REST_MARKET_IDS=29,24
LIGHTER_MARKET_ORDER_BASE_AMOUNT=0.1
LIGHTER_MARKET_ORDER_MAX_SLIPPAGE=0.02
LIGHTER_MARKET_ORDER_DELAY_SECONDS=10
